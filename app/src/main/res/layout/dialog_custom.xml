<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView

        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bây giờ là"
        android:textColor="#0051F3"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="28dp" />




    <TextView
        android:gravity="center"
        android:id="@+id/txtThoiGianNow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="192dp"
        tools:layout_editor_absoluteY="36dp" />

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bạn trẻ muốn dậy vào mấy giờ?"
        android:textColor="@color/black"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="112dp" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtTinhTime2"
            android:layout_width="88dp"
            android:layout_height="42dp"
            android:gravity="center"
            android:text="TextView"
            tools:layout_editor_absoluteX="112dp"
            tools:layout_editor_absoluteY="235dp" />

        <TextView
            android:id="@+id/txtTinhTime4"
            android:layout_width="88dp"
            android:layout_height="42dp"
            android:gravity="center"
            android:text="TextView"
            tools:layout_editor_absoluteX="112dp"
            tools:layout_editor_absoluteY="331dp" />

        <TextView
            android:id="@+id/txtTinhTime1"
            android:layout_width="88dp"
            android:layout_height="42dp"
            android:gravity="center"
            android:text="TextView"
            tools:layout_editor_absoluteX="112dp"
            tools:layout_editor_absoluteY="187dp" />

        <TextView
            android:id="@+id/txtTinhTime3"
            android:layout_width="88dp"
            android:layout_height="42dp"
            android:gravity="center"
            android:text="TextView"
            tools:layout_editor_absoluteX="112dp"
            tools:layout_editor_absoluteY="283dp" />
        <RadioGroup
            android:layout_toRightOf="@+id/txtTinhTime1"
            android:id="@+id/radioGroup"
            android:layout_width="85dp"
            android:layout_height="193dp"
            android:gravity="center"
            tools:layout_editor_absoluteX="207dp"
            tools:layout_editor_absoluteY="187dp">

            <RadioButton
                android:id="@+id/radioButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/radioButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/radioButton4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RadioGroup>
    </RelativeLayout>


    <Button
        android:text="Xác nhận"
        android:id="@+id/btnXacNhan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:text="Hủy"
        android:id="@+id/btnHuy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>